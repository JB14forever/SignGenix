<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_selectOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ordinarySelect_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:fontFamily="monospace"
        android:text="Please Select Your Option : "
        android:textAlignment="center"
        android:textColor="@color/cardview_dark_background"
        android:textSize="28dp" />

    <Button
        android:id="@+id/ordinarySelect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:elevation="5dp"
        android:text="Ordinary"
        android:textSize="26dp" />

    <Button
        android:id="@+id/extraOrdinarySelect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ordinarySelect_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:elevation="5dp"
        android:text="Extra-Ordinary"
        android:textSize="26dp" />

</RelativeLayout>